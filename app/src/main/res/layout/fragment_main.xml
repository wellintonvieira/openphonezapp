<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_500">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_view_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_margin_med"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textIsSelectable="true"
        android:textSize="@dimen/text_view_size_max"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="00000000000" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_margin_med"
        app:cardBackgroundColor="@color/primary_400"
        app:cardCornerRadius="@dimen/card_view_radius_min"
        app:cardElevation="@dimen/card_view_elevation_min"
        app:cardMaxElevation="@dimen/card_view_elevation_max"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_phone_number">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_1"
                android:layout_width="@dimen/material_button_size"
                android:layout_height="@dimen/material_button_size"
                android:text="1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_view_size_med"
                app:cornerRadius="@dimen/card_view_radius_max"
                app:layout_constraintBottom_toBottomOf="@+id/button_2"
                app:layout_constraintEnd_toStartOf="@+id/button_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/button_2"
                tools:ignore="HardcodedText" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_2"
                android:layout_width="@dimen/material_button_size"
                android:layout_height="@dimen/material_button_size"
                android:layout_marginTop="@dimen/layout_margin_med"
                android:text="2"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_view_size_med"
                app:cornerRadius="@dimen/card_view_radius_max"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_3"
                android:layout_width="@dimen/material_button_size"
                android:layout_height="@dimen/material_button_size"
                android:text="3"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_view_size_med"
                app:cornerRadius="@dimen/card_view_radius_max"
                app:layout_constraintBottom_toBottomOf="@+id/button_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/button_2"
                app:layout_constraintTop_toTopOf="@+id/button_2"
                tools:ignore="HardcodedText" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_4"
                android:layout_width="@dimen/material_button_size"
                android:layout_height="@dimen/material_button_size"
                android:text="4"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_view_size_med"
                app:cornerRadius="@dimen/card_view_radius_max"
                app:layout_constraintBottom_toBottomOf="@+id/button_5"
                app:layout_constraintEnd_toStartOf="@+id/button_5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/button_5"
                tools:ignore="HardcodedText" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_5"
                android:layout_width="@dimen/material_button_size"
                android:layout_height="@dimen/material_button_size"
                android:text="5"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_view_size_med"
                app:cornerRadius="@dimen/card_view_radius_max"
                app:layout_constraintEnd_toEndOf="@+id/button_2"
                app:layout_constraintStart_toStartOf="@+id/button_2"
                app:layout_constraintTop_toBottomOf="@+id/button_2"
                tools:ignore="HardcodedText" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_6"
                android:layout_width="@dimen/material_button_size"
                android:layout_height="@dimen/material_button_size"
                android:text="6"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_view_size_med"
                app:cornerRadius="@dimen/card_view_radius_max"
                app:layout_constraintBottom_toBottomOf="@+id/button_5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/button_5"
                app:layout_constraintTop_toTopOf="@+id/button_5"
                tools:ignore="HardcodedText" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_7"
                android:layout_width="@dimen/material_button_size"
                android:layout_height="@dimen/material_button_size"
                android:text="7"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_view_size_med"
                app:cornerRadius="@dimen/card_view_radius_max"
                app:layout_constraintBottom_toBottomOf="@+id/button_8"
                app:layout_constraintEnd_toStartOf="@+id/button_8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/button_8"
                tools:ignore="HardcodedText" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_8"
                android:layout_width="@dimen/material_button_size"
                android:layout_height="@dimen/material_button_size"
                android:text="8"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_view_size_med"
                app:cornerRadius="@dimen/card_view_radius_max"
                app:layout_constraintEnd_toEndOf="@+id/button_5"
                app:layout_constraintStart_toStartOf="@+id/button_5"
                app:layout_constraintTop_toBottomOf="@+id/button_5"
                tools:ignore="HardcodedText" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_9"
                android:layout_width="@dimen/material_button_size"
                android:layout_height="@dimen/material_button_size"
                android:text="9"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_view_size_med"
                app:cornerRadius="@dimen/card_view_radius_max"
                app:layout_constraintBottom_toBottomOf="@+id/button_8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/button_8"
                app:layout_constraintTop_toTopOf="@+id/button_8"
                tools:ignore="HardcodedText" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_0"
                android:layout_width="@dimen/material_button_size"
                android:layout_height="@dimen/material_button_size"
                android:layout_marginBottom="@dimen/layout_margin_med"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_view_size_med"
                app:cornerRadius="@dimen/card_view_radius_max"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/button_8"
                app:layout_constraintStart_toStartOf="@+id/button_8"
                app:layout_constraintTop_toBottomOf="@+id/button_8"
                tools:ignore="HardcodedText" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_backspace"
                android:layout_width="@dimen/material_button_size"
                android:layout_height="@dimen/material_button_size"
                android:text="\u232b"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_view_size_med"
                app:cornerRadius="@dimen/card_view_radius_max"
                app:layout_constraintBottom_toBottomOf="@+id/button_0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/button_0"
                app:layout_constraintTop_toTopOf="@+id/button_0"
                tools:ignore="HardcodedText" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_view_contact_add"
        android:layout_width="@dimen/image_view_call"
        android:layout_height="@dimen/image_view_call"
        android:layout_marginEnd="@dimen/layout_margin_max"
        android:tint="@color/secondary_200"
        app:layout_constraintBottom_toBottomOf="@+id/floating_button_whatsapp"
        app:layout_constraintEnd_toStartOf="@+id/floating_button_whatsapp"
        app:layout_constraintTop_toTopOf="@+id/floating_button_whatsapp"
        app:srcCompat="@drawable/ic_round_contact_add" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_button_whatsapp"
        android:layout_width="@dimen/floating_button_whatsapp"
        android:layout_height="@dimen/floating_button_whatsapp"
        android:layout_margin="@dimen/layout_margin_med"
        android:contentDescription="@string/floating_button_whatsapp"
        android:src="@drawable/ic_round_whatsapp"
        app:fabCustomSize="@dimen/floating_button_whatsapp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView"
        app:maxImageSize="@dimen/image_view_icon_size"
        app:tint="@color/primary_500" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_view_contact_call"
        android:layout_width="@dimen/image_view_call"
        android:layout_height="@dimen/image_view_call"
        android:layout_marginStart="@dimen/layout_margin_max"
        android:tint="@color/secondary_200"
        app:layout_constraintBottom_toBottomOf="@+id/floating_button_whatsapp"
        app:layout_constraintStart_toEndOf="@+id/floating_button_whatsapp"
        app:layout_constraintTop_toTopOf="@+id/floating_button_whatsapp"
        app:srcCompat="@drawable/ic_round_call" />

</androidx.constraintlayout.widget.ConstraintLayout>