<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_items"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/layout_margin_min"
    app:cardBackgroundColor="@color/primary_400"
    app:cardCornerRadius="@dimen/card_view_radius_min"
    app:cardElevation="@dimen/card_view_elevation_min"
    app:cardMaxElevation="@dimen/card_view_elevation_max">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_view_contact_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_margin_max"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_view_size_med"
        tools:text="(00) 0 0000-0000" />

</com.google.android.material.card.MaterialCardView>