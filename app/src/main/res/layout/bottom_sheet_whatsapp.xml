<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary_500">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_line_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_button_whatsapp"
        android:layout_width="@dimen/floating_button_whatsapp"
        android:layout_height="@dimen/floating_button_whatsapp"
        android:layout_marginTop="@dimen/layout_margin_med"
        android:contentDescription="@string/floating_button_whatsapp"
        android:src="@drawable/ic_round_whatsapp"
        app:fabCustomSize="@dimen/floating_button_whatsapp"
        app:layout_constraintEnd_toStartOf="@+id/guide_line_bottom_sheet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:maxImageSize="@dimen/image_view_icon_size"
        app:tint="@color/primary_500" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_view_whatsapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin_min"
        android:layout_marginBottom="@dimen/layout_margin_med"
        android:text="@string/text_view_whatsapp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_view_size_med"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/floating_button_whatsapp"
        app:layout_constraintStart_toStartOf="@+id/floating_button_whatsapp"
        app:layout_constraintTop_toBottomOf="@+id/floating_button_whatsapp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_button_business"
        android:layout_width="@dimen/floating_button_whatsapp"
        android:layout_height="@dimen/floating_button_whatsapp"
        android:layout_marginTop="@dimen/layout_margin_med"
        android:contentDescription="@string/floating_button_whatsapp"
        android:src="@drawable/ic_round_whatsapp"
        app:fabCustomSize="@dimen/floating_button_whatsapp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guide_line_bottom_sheet"
        app:layout_constraintTop_toTopOf="parent"
        app:maxImageSize="@dimen/image_view_icon_size"
        app:tint="@color/primary_500" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_view_whatsapp_business"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin_min"
        android:layout_marginBottom="@dimen/layout_margin_med"
        android:text="@string/text_view_whatsapp_business"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_view_size_med"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/floating_button_business"
        app:layout_constraintStart_toStartOf="@+id/floating_button_business"
        app:layout_constraintTop_toBottomOf="@+id/floating_button_business" />

</androidx.constraintlayout.widget.ConstraintLayout>